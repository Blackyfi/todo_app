<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:background="@drawable/widget_task_background"
    android:layout_marginBottom="2dp">

    <!-- Clickable checkbox area - ONLY this should be clickable for toggling -->
    <TextView
        android:id="@+id/task_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="â—‹"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:background="@drawable/widget_checkbox_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp" />

    <!-- Task title - NOT clickable to avoid conflicts -->
    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="12sp"
        android:textColor="#FF000000"
        android:ellipsize="end"
        android:maxLines="1"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>