<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_task_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:background="@drawable/widget_task_background"
    android:layout_marginBottom="3dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Clickable checkbox -->
    <TextView
        android:id="@+id/task_checkbox"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:text="â—‹"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:background="@drawable/widget_checkbox_background"
        android:clickable="false"
        android:focusable="false" />

    <!-- Task content container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Task title -->
        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:clickable="false"
            android:focusable="false" />

        <!-- Task description (optional) -->
        <TextView
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task description"
            android:textSize="10sp"
            android:textColor="#FF666666"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false" />

    </LinearLayout>

    <!-- Priority badge (hidden by default for simplicity) -->
    <TextView
        android:id="@+id/priority_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"
        android:textSize="8sp"
        android:textColor="#FFFFFFFF"
        android:background="#FFFF0000"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

    <!-- Category badge (hidden by default for simplicity) -->
    <TextView
        android:id="@+id/category_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work"
        android:textSize="8sp"
        android:textColor="#FF2196F3"
        android:background="#332196F3"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

    <!-- Due date (hidden by default for simplicity) -->
    <TextView
        android:id="@+id/due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due: Jan 15"
        android:textSize="8sp"
        android:textColor="#FF666666"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

    <!-- Status indicator (hidden by default for simplicity) -->
    <TextView
        android:id="@+id/status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVERDUE"
        android:textSize="7sp"
        android:textColor="#FFFF0000"
        android:textStyle="bold"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>